{
  "name": "kanbasu.liip.ch",
  "version": "1.0.0",
  "description": "Kanbasu website & documentation",
  "main": "index.js",
  "scripts": {
    "build": "npm run build:css",
    "start": "parallelshell 'npm run server' 'npm run watch:css'",
    "server": "browser-sync start --server 'src' --files 'src' 'dist' --serveStatic 'dist' --no-open",
    "scss": "node-sass --include-path 'node_modules' --output-style compressed -o dist/css src/scss",
    "autoprefixer": "postcss -u autoprefixer -r dist/css/*.css",
    "build:css": "npm run scss && npm run autoprefixer",
    "watch:css": "onchange 'src/scss/**/*.scss' -- npm run build:css"
  },
  "author": "BenoÃ®t Burgener, Liip AG",
  "license": "MIT",
  "devDependencies": {
    "autoprefixer": "^7.1.6",
    "browser-sync": "^2.18.13",
    "kanbasu": "^2.0.0-rc.1",
    "node-sass": "^4.5.3",
    "onchange": "^3.2.1",
    "parallelshell": "^3.0.2",
    "postcss-cli": "^4.1.1"
  },
  "browserslist": [
    "last 2 versions",
    "IE >= 11"
  ]
}
